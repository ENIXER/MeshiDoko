    <FrameLayout
        android:id="@+id/cand0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <include layout="@layout/vote_item" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/cand1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <include layout="@layout/vote_item" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/cand2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <include layout="@layout/vote_item" />
    </FrameLayout>

</LinearLayout>